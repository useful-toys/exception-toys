<?xml version="1.0" encoding="UTF-8"?>
<project name="exception-toys-libs" default="exception-toys-libs.init" basedir=".">
    <description>Downloads dependencies</description>
	<dirname property="lib.dir" file="${ant.file}" />
	<echo message="Libraries directory: ${lib.dir}" />

    <target name="exception-toys-libs.init" description="Download dependencies" >
    	<mkdir dir="${lib.dir}/Slf4j-1.7"/>
    	<get dest="${lib.dir}/Slf4j-1.7" skipexisting="true" src="http://central.maven.org/maven2/org/slf4j/slf4j-api/1.7.12/slf4j-api-1.7.12.jar" />
    	<mkdir dir="${lib.dir}/JUnit-4" />
    	<get dest="${lib.dir}/JUnit-4" skipexisting="true" src="http://central.maven.org/maven2/junit/junit/4.12/junit-4.12.jar" />
    	<get dest="${lib.dir}/JUnit-4" skipexisting="true" src="http://central.maven.org/maven2/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar" />
    </target>
</project>
